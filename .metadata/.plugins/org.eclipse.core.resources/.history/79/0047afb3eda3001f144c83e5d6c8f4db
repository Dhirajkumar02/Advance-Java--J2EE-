package com.jsp.servlet.sms;

import java.io.IOException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.mysql.cj.jdbc.Driver;

@WebServlet("/add-student")
public class AddStudentServlet extends HttpServlet {
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		int studendId = Integer.parseInt(req.getParameter("studendId"));
		String studendName = req.getParameter("studendName");
		String studendEmail = req.getParameter("studendEmail");
		int studendAge = Integer.parseInt(req.getParameter("studendAge"));
		String studendCourse = req.getParameter("studendCourse");
		String studendCity = req.getParameter("studendCity");
		
		// JDBC Logic
		Connection conn = null;
		
		try {
			Driver driver = new com.mysql.cj.jdbc.Driver();
			DriverManager.registerDriver(driver);
			conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/servlet_student-management-system", "root", "DHIraj@2002");
			
			PreparedStatement ps = conn.prepareStatement("INSERT INTO student VALUES(?,?,?,?,?,?)");
			ps.setInt(1, studendId);
			ps.setString(2, studendName);
			ps.setString(3, studendEmail);
			ps.setInt(4, studendAge);
			ps.setString(5, studendCourse);
			ps.setString(6, studendCity);
			
			ps.execute();
			
			resp.sendRedirect("index.jsp");
		} catch (SQLException e) {
			
			e.printStackTrace();
		}
	}

}
